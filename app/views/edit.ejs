<!-- Login Section Start Here -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
<section class="login-section">
    <div class="custom-container-fluid">
        <div class="row no-gutters">
            <div class="col-lg-6 set-flex">
                <div class="login-area">
                    <h5>Hello,<br>Welcome to <span>BlackPledge</span>.</h5>
                    <p class="text-danger"></p>
                    <form class="login-form" id="login-form" action="/user/update/<%= id %>" method="post">

                        <input type="text" class="form-control" name="userName" formControlName="userName"
                           value="<%= userName %>" placeholder="User Name">

                        <input type="email" class="form-control" name="email" formControlName="email"
                           value="<%= email %>" placeholder="Email Address">

                        <input type="text" class="form-control" name="taskName" formControlName="taskName"
                           value="<%= taskName %>" placeholder="Task Name">

                        <input type="text" class="form-control" name="taskDescription" formControlName="taskDescription"
                           value="<%= taskDescription %>" placeholder="Task Description">
                        <button type="submit" class="btn login-btn" role="button">update data</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

