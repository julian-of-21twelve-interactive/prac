  href="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.9.0/dist/css/bootstrap-datepicker.min.css">
<section class="login-section">
  <div class="custom-container-fluid">
    <div class="row no-gutters">
      <div class="col-lg-6 set-flex">
        <div class="login-area">
          <h5>Hello,<br>Welcome to <span>BlackPledge</span>.</h5>
          <p class="text-danger"></p>
          <form class="login-form" id="login-form" action="/user/loginUser" method="post">

            <input type="text" class="form-control" name="userNameOrEmail" formControlName="Email"
              placeholder="Email Address OR User Name" required>

            <input type="password" class="form-control" name="password" formControlName="Password"
              placeholder="Password" required>

            <button type="submit" class="btn login-btn" role="button">Login</button>
            <p class="login-su">Donâ€™t have an account? <a style="cursor: pointer;"
                onclick="switchToLoginSignUp('signup')">Sign Up</a></p>
          </form>

          <!-- Sign up form -->
          <form class="login-form" id="signup-form" style="display:none" action="/user/register" method="post">

            <input type="text" class="form-control" name="userName" formControlName="userName" placeholder="User Name"
              required>

            <input type="email" class="form-control" name="email" formControlName="email" placeholder="Email Address"
              required>

            <div formGroupName="Passwords">
              <input type="password" class="form-control" name="password" formControlName="password"
                placeholder="Password" required>
            </div>

            <input type="text" class="form-control" name="taskName" formControlName="taskName" placeholder="Task Name"
              required>

            <input type="text" class="form-control" name="taskDescription" formControlName="taskDescription"
              placeholder="Task Description" required>
              
            <input type="text" id="dateOfBirth" name="dateAndTime" class="form-control" placeholder="select future date" required>

            <button type="submit" class="btn login-btn"
              [disabled]="!apiService.signUpFormModel.valid || isFormSubmitted" role="button">Sign up</button>
            <p class="login-su">Have an account? <a style="cursor: pointer;" onclick="switchToLoginSignUp('login')">Log
                In</a></p>
          </form>

        </div>
      </div>
    </div>
  </div>
</section>
<!-- Login Section End Here -->
<script language="javascript">
  function switchToLoginSignUp(formId) {
    var x = document.getElementById("signup-form");
    var y = document.getElementById("login-form");
    if (formId == 'signup') {

      x.style.display = "block";
      y.style.display = "none";
    } else {
      x.style.display = "none";
      y.style.display = "block";

    }
  }
</script>


